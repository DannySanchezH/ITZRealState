
@model IEnumerable<ITZRealStateWeb.Models.Listing>

<p>
    <a href="#" onclick="CreateListing(@ViewBag.id);">Create New</a>
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.colony)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lotSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.constSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zipcode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.colony)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lotSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.constSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zipcode)
        </td>
        <td>
            @if(ViewBag.rol == "Administrator"){
            <a href="#" onclick="editListing(@item.IdListing);">Edit</a> 
            @Html.ActionLink("Delete", "DeleteListingAjax","Listing", new { id = item.IdListing },null)
            }
            
            <!--<a href="#" onclick="deleteListing(@item.IdListing);">Delete</a>-->
        </td>
    </tr>
}
    
</table>


