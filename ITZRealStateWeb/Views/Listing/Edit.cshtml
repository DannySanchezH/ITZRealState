@model ITZRealStateWeb.Models.Listing

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<link rel="stylesheet" type="text/css" href="~/Content/logs.css" />

@Scripts.Render("~/Scripts/Listing/Index.js")

@using (Html.BeginForm("EditListingAjax", "Listing", FormMethod.Post, new { @class = "metro-form", id = "current_form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div id="login-box" class="form_settings">
        <h2><legend>Edit Listing</legend></h2>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.lotSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lotSize)
            @Html.ValidationMessageFor(model => model.lotSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.constSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.constSize)
            @Html.ValidationMessageFor(model => model.constSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.price)
            @Html.ValidationMessageFor(model => model.price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdUser)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdUser)
            @Html.ValidationMessageFor(model => model.IdUser)
        </div>
    
        <div class="editor-label">
            @Html.LabelFor(model => model.zipcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.zipcode)
            @Html.ValidationMessageFor(model => model.zipcode)
        </div>
    
        @Html.HiddenFor(model => model.IdListing)

        <p>
            <input class="btn" type="button" value="Update" onclick="submitEdit(this.form);" />
            <input class="btn" type="submit" value="Cancel" onclick="cancel();" />
        </p>
    </div>
}

